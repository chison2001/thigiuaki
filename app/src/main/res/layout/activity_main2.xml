<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="WELCOME BACK!"
        android:textColor="#000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="374dp"
        android:layout_height="165dp"
        android:layout_marginTop="16dp"
        android:background="#F7BA83"
        app:layout_constraintStart_toStartOf="@+id/tvWelcome"
        app:layout_constraintTop_toBottomOf="@+id/tvWelcome" />

    <TextView
        android:id="@+id/tvViewProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="4dp"
        android:text="New Products"
        android:textColor="#000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view" />

    <TextView
        android:id="@+id/tvGetDiscount"
        android:layout_width="182dp"
        android:layout_height="43dp"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:text="Get a 50% discount on  your first purchase"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tvViewProduct"
        app:layout_constraintTop_toBottomOf="@+id/tvViewProduct" />

    <Button
        android:id="@+id/tvBuyNow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Buy now"
        app:backgroundTint="#E94141"
        app:layout_constraintStart_toStartOf="@+id/tvGetDiscount"
        app:layout_constraintTop_toBottomOf="@+id/tvGetDiscount" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="128dp"
        android:layout_height="98dp"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintStart_toEndOf="@+id/tvGetDiscount"
        app:layout_constraintTop_toTopOf="@+id/tvGetDiscount"
        app:srcCompat="@drawable/bifive__removebg_preview" />

    <Button
        android:id="@+id/btnTrending"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Trending"
        android:textColor="#000"
        android:textSize="10sp"
        app:backgroundTint="#FFF"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <Button
        android:id="@+id/btnPopular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:text="Popular"
        android:textColor="#000"
        android:textSize="10sp"
        app:backgroundTint="#FFF"
        app:layout_constraintStart_toEndOf="@+id/btnTrending"
        app:layout_constraintTop_toTopOf="@+id/btnTrending" />

    <Button
        android:id="@+id/btnWeRecomend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:text="We recommended"
        android:textColor="#000"
        android:textSize="10sp"
        app:backgroundTint="#FFF"
        app:layout_constraintStart_toEndOf="@+id/btnPopular"
        app:layout_constraintTop_toTopOf="@+id/btnPopular" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="373dp"
        android:layout_height="355dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnTrending" />
</androidx.constraintlayout.widget.ConstraintLayout>